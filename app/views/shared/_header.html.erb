<section class="hero is-info is-small">
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
          <%= link_to root_path, class: "navbar-item" do%>
          <span class="has-text-weight-bold is-size-4 ml-4">FoodDiary</span>
          <% end %>
          </a>
          <span class="navbar-burger" data-target="navbarMenuHeroB">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroB" class="navbar-menu">
          <div class="navbar-end">
          <span class="navbar-item">
            <%= link_to "Create new entry", new_entry_path, class: "button is-success"%>
            </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title">
      <% if content_for(:title)%>
        <%= yield :title %>
        <% else %>
        FoodDiary
        <% end %>
      </p>
    </div>
  </div>

 
</section>